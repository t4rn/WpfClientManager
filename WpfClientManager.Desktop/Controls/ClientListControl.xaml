<UserControl x:Class="WpfClientManager.Desktop.Controls.ClientListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientManager.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Button Name="btnGetClients" Content="Get Clients" Click="btnGetClients_Click" />

            <DataGrid Name="dgClients"
                  AlternatingRowBackground="LightBlue"
                  CanUserAddRows="False"
                  ItemsSource="{Binding Clients}">
        </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
